<!DOCTYPE html>
<html>

<head>
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body class="admin-page">
  <div class="container">
    <h3>Admin Panel</h3>
    <div class="dashboard-cards">
      <div class="dashboard-card black">
        5000â‚¹
        <div class="label">Reimbursement</div>
      </div>
      <div class="dashboard-card green">
        <%= requests.filter(r=> r.status === 'Approved').length %>
          <div class="label">Approved Requests</div>
      </div>
      <div class="dashboard-card yellow">
        <%= requests.filter(r=> r.status === 'Pending').length %>
          <div class="label">Pending Requests</div>
      </div>
      <div class="dashboard-card red">
        <%= requests.filter(r=> r.status === 'Rejected').length %>
          <div class="label">Rejected Requests</div>
      </div>
    </div>
    <table>
      <tr>
        <th>Employee Name</th>
        <th>Employee Id</th>
        <th>Expense</th>
        <th>Status</th>
        <th>Amount</th>
        <th>Paid</th>
      </tr>
      <% requests.forEach(function(r) { %>
        <tr>
          <td>
            <%= r.employeeName %>
          </td>
          <td>
            <%= r.employeeId %>
          </td>
          <td>
            <%= r.reason %>
          </td>
          <td><span class="status-<%= r.status.toLowerCase() %>">
              <%= r.status %>
            </span></td>
          <td>
            <%= r.amount %>
          </td>
          <td>
            <% if (r.status==='Approved' && r.paymentStatus !=='Paid' ) { %>
              <form action="/admin/paid/<%= r.id %>" method="POST" style="display:inline;"><button
                  type="submit">Paid</button></form>
              <form action="/admin/unpaid/<%= r.id %>" method="POST" style="display:inline;"><button
                  type="submit">Unpaid</button></form>
              <% } else { %>
                <span>-</span>
                <% } %>
          </td>
        </tr>
        <% }); %>
    </table>
  </div>
</body>

</html>