<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Reimbursement Form</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/styles.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: #E5E5E5;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px 10px;
    }

    .main-container {
      display: flex;
      width: 900px;
      max-width: 100%;
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      min-height: 600px;
    }

    .illustration-side {
      flex: 0 0 45%;
      background: linear-gradient(135deg, #e8f0fe 0%, #d4e4f7 100%);
      padding: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .illustration-side img {
      width: 130%;
      height: 70%;
      object-fit: contain;
      z-index: 1;
      position: relative;
      border-radius: 100px;
    }

    .form-side {
      flex: 0 0 55%;
      padding: 40px;
      background: white;
      overflow-y: auto;
    }

    .welcome-badge {
      display: inline-block;
      background: linear-gradient(90deg, #7da7ff 0%, #5d78ff 100%);
      color: white;
      padding: 8px 20px;
      border-radius: 25px;
      font-size: 12px;
      font-weight: 600;
      margin-bottom: 15px;
      letter-spacing: 0.5px;
    }

    .form-title {
      font-size: 26px;
      font-weight: 700;
      color: #2c3e50;
      margin-bottom: 30px;
      line-height: 1.3;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      color: #5a6c7d;
      font-size: 13px;
      margin-bottom: 8px;
      font-weight: 600;
    }

    .input-wrapper {
      position: relative;
    }

    .input-wrapper i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #9ca3af;
      font-size: 14px;
    }

    .form-group input,
    .form-group textarea {
      width: 100%;
      height: 45px;
      padding: 0 15px 0 45px;
      border: 1.5px solid #e0e4e8;
      border-radius: 8px;
      font-size: 14px;
      color: #2c3e50;
      transition: all 0.3s ease;
      font-family: 'Inter', sans-serif;
    }

    .form-group textarea {
      padding: 12px 15px;
      resize: none;
      min-height: 45px;
    }

    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #7da7ff;
      box-shadow: 0 0 0 3px rgba(125, 167, 255, 0.1);
    }

    .form-group input::placeholder,
    .form-group textarea::placeholder {
      color: #c0c4d0;
    }

    .file-input-wrapper {
      position: relative;
    }

    .file-input-wrapper input[type=file] {
      position: absolute;
      left: -9999px;
    }

    .file-input-label {
      display: block;
      width: 100%;
      height: 45px;
      padding: 0 15px 0 45px;
      border: 1.5px solid #e0e4e8;
      border-radius: 8px;
      font-size: 14px;
      color: #c0c4d0;
      cursor: pointer;
      line-height: 45px;
      position: relative;
      transition: all 0.3s ease;
    }

    .file-input-label:hover {
      border-color: #7da7ff;
      background: #f8f9fc;
    }

    .file-input-label i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #9ca3af;
      font-size: 14px;
    }

    .submit-btn {
      width: 100%;
      height: 50px;
      background: linear-gradient(90deg, #7da7ff 0%, #5d78ff 100%);
      color: white;
      border: none;
      border-radius: 25px;
      font-size: 15px;
      font-weight: 700;
      cursor: pointer;
      box-shadow: 0 6px 20px rgba(93, 120, 255, 0.3);
      transition: all 0.3s ease;
      margin-top: 10px;
    }

    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(93, 120, 255, 0.4);
    }

    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }

    .modal-content {
      background: white;
      border-radius: 20px;
      padding: 40px;
      max-width: 400px;
      width: 90%;
      text-align: center;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
      animation: slideUp 0.3s ease;
    }

    @keyframes slideUp {
      from {
        transform: translateY(50px);
        opacity: 0;
      }

      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .modal-icon {
      font-size: 60px;
      color: #28a745;
      margin-bottom: 20px;
    }

    .modal-title {
      font-size: 24px;
      font-weight: 700;
      color: #2c3e50;
      margin-bottom: 10px;
    }

    .modal-message {
      font-size: 14px;
      color: #6b7280;
      margin-bottom: 20px;
    }

    .modal-status {
      margin-bottom: 25px;
    }

    .status-badge {
      background: linear-gradient(135deg, #fbbf24, #f59e0b);
      color: white;
      padding: 8px 20px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 600;
    }

    .modal-btn {
      width: 100%;
      height: 45px;
      background: linear-gradient(90deg, #7da7ff 0%, #5d78ff 100%);
      color: white;
      border: none;
      border-radius: 25px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .modal-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(93, 120, 255, 0.4);
    }

    @media (max-width: 768px) {
      .main-container {
        flex-direction: column;
        height: auto;
      }

      .illustration-side {
        flex: 0 0 auto;
        padding: 30px;
        min-height: 300px;
      }

      .form-side {
        padding: 30px 20px;
      }

      .form-title {
        font-size: 22px;
      }
    }
  </style>
</head>

<body>
  <div class="main-container">
    <div class="illustration-side">
      <img src="/images/illustration.png" alt="Reimbursement Illustration">
    </div>
    <div class="form-side">
      <span class="welcome-badge">Welcome Back</span>
      <h2 class="form-title">Employee Reimbursement Form</h2>
      <form action="/submit" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="employeeName"><i class="fas fa-user"></i> Employee Name</label>
          <div class="input-wrapper"><i class="fas fa-user"></i><input type="text" id="employeeName" name="employeeName"
              placeholder="Employee Name" required></div>
        </div>
        <div class="form-group">
          <label for="employeeId"><i class="fas fa-id-card"></i> Employee ID</label>
          <div class="input-wrapper"><i class="fas fa-id-card"></i><input type="text" id="employeeId" name="employeeId"
              placeholder="Employee ID" required></div>
        </div>
        <div class="form-group">
          <label for="department"><i class="fas fa-building"></i> Department</label>
          <div class="input-wrapper"><i class="fas fa-building"></i><input type="text" id="department" name="department"
              placeholder="Department" required></div>
        </div>
        <div class="form-group">
          <label for="amount"><i class="fas fa-rupee-sign"></i> Reimbursement Amount</label>
          <div class="input-wrapper"><i class="fas fa-rupee-sign"></i><input type="number" id="amount" name="amount"
              placeholder="Reimbursement Amount" required></div>
        </div>
        <div class="form-group">
          <label for="reason"><i class="fas fa-file-alt"></i> Description of Expense</label>
          <div class="input-wrapper"><textarea id="reason" name="reason" placeholder="Description of Expense" required
              rows="2"></textarea></div>
        </div>
        <div class="form-group">
          <label for="date"><i class="fas fa-calendar"></i> Date of Expense</label>
          <div class="input-wrapper"><i class="fas fa-calendar"></i><input type="date" id="date" name="date" required>
          </div>
        </div>
        <div class="form-group">
          <label for="receipt"><i class="fas fa-paperclip"></i> Upload Receipt/Bill</label>
          <div class="file-input-wrapper">
            <input type="file" id="receipt" name="receipt" accept="image/*,.pdf">
            <label for="receipt" class="file-input-label"><i class="fas fa-paperclip"></i><span id="fileName">Upload
                Receipt/Bill</span></label>
          </div>
        </div>
        <button type="submit" class="submit-btn">Submit</button>
      </form>
    </div>
  </div>
  <% if (typeof success !=='undefined' && success) { %>
    <div class="modal-overlay" id="successModal">
      <div class="modal-content">
        <div class="modal-icon"><i class="fas fa-check-circle"></i></div>
        <h2 class="modal-title">Successfully Submitted!</h2>
        <p class="modal-message">Your reimbursement request has been submitted successfully.</p>
        <div class="modal-status"><span class="status-badge">Status: <strong>Pending</strong></span></div>
        <button class="modal-btn" onclick="window.location.href='/reimbursement'">OK</button>
      </div>
    </div>
    <% } %>
      <script>
        document.getElementById('receipt').addEventListener('change', function () {
          document.getElementById('fileName').textContent = this.files[0] ? this.files[0].name : 'Upload Receipt/Bill';
        });
      </script>
</body>

</html>